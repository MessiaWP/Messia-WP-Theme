{
    "config": {
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/installers": true
        }
    },
    "require-dev": {
        "phpcompatibility/php-compatibility": "^9.3",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "phpcsstandards/phpcsextra": "@alpha",
        "phpcsstandards/phpcsutils": "1.0.0-alpha4",
        "squizlabs/php_codesniffer": "^3.7",
        "wp-coding-standards/wpcs": "dev-develop"
    },
    "scripts": {
        "code-sniffer": [
            "phpcs --config-set default_standard phpcs.xml",
            "phpcs --config-set report_format summary",
            "phpcs --config-set show_progress 1",
            "phpcs --config-set report_width 120",
            "phpcs --config-set colors 1",
            "phpcs --config-set installed_paths ../../phpcompatibility/php-compatibility,../../phpcompatibility/phpcompatibility-paragonie,../../phpcompatibility/phpcompatibility-wp,../../wp-coding-standards/wpcs,../../phpcsstandards/phpcsutils,../../phpcsstandards/PHPCSExtra/Universal,../../phpcsstandards/PHPCSExtra/Modernize",
            "phpcs --config-set text_domain \"\"",
            "phpcs --config-set prefixes \"\"",
            "phpcs --config-set minimum_supported_wp_version \"6.0\""
        ],
        "post-install-cmd": [
            "@code-sniffer"
        ],
        "post-update-cmd": [
            "@code-sniffer"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
