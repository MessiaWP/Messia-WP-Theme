:root {
    /* Typography */
    --primary-color: black;
    --primary-color-darken: #e18700;
    --primary-color-darker: #503917;
    --primary-color-lighten: #e5d5bc;
    --primary-color-lighter: #fcfbf3;
    --dark-gray: #d1d1d1;
    --light-gray: #f0f0f0;

    --text-color: #4b483b;

    --font-primary: 'Raleway', 'Source Sans Pro', Helvetica, Arial, sans-serif;
    --font-secondary: 'Raleway', 'Source Sans Pro', Helvetica, Arial, sans-serif;
}

a, abbr {
    text-decoration: none;
}